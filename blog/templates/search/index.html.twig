{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    {% include 'article/sub/header.html.twig' %}
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('../../public/img/post-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Clean Blog</h1>
                        <span class="subheading">A Blog Theme by Start Bootstrap</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                {% if articles is not empty %}
                {% for article in articles %}
                    <div class="post-preview">
                        <a href="{{ path('article_show', {'id': article.id}) }}">
                            <h2 class="post-title">
                                {{ article.title }}
                            </h2>
                            <h3 class="post-subtitle">
                                {{ article.body }}
                            </h3>
                        </a>
                        <p>
                            <a href="{{ path('article_index') }}">back to list</a>
                            <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                        </p>
                        <p class="post-meta">Posted by
                            <a href="#">Start Bootstrap</a>
                            on {{ article.createdAt|date('m/d/Y') }}
                            at {{ article.createdAt|date('H:i:s') }}
                        </p>
                    </div>
                    <hr>
                {% endfor %}
                {% else %}
                    No results were found for your request.
                {% endif %}
                <!-- Pager -->
                <div class="clearfix">
                    <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
                </div>
            </div>
        </div>
    </div>

    <hr>
    {% include 'article/sub/footer.html.twig' %}
{% endblock %}